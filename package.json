{
  "name": "ten",
  "version": "1.0.0",
  "description": "TypeScript + Express.js + Node",
  "author": "Konrad Gadzinowski <kgadzinowski@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch src --watch test --ext ts,tsx,js,scss,css --exec 'gulp build-client-dev && \"ts-node\" -- \"src/server/app/BootDev.ts\"'",
    "start-prod": "\"ts-node\" \"./src/server/app/BootProd.ts\"",
    "build-client": "gulp build-client",
    "format-code": "prettier --config .prettierrc \"{src/**/*,test/**/*}.{ts,tsx,css,less,scss,js,jsx}\" --write",
    "test-all": "npm run test-server && npm run test-client",
    "test-client": "karma start karma.conf.js",
    "test-server": "mocha -r ts-node/register test/server/**/*.ts"
  },
  "dependencies": {
    "body-parser": "~1.19.1",
    "cookie-parser": "~1.4.6",
    "css-loader": "^6.5.1",
    "debug": "~4.3.3",
    "express": "~4.17.2",
    "gulp-run-sequence": "^0.3.2",
    "hbs": "~4.2.0",
    "less": "^4.1.2",
    "morgan": "~1.10.0",
    "sass": "^1.45.1",
    "sass-loader": "^12.4.0",
    "serve-favicon": "~2.5.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack-stream": "^7.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/jquery": "^3.5.10",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.2",
    "chai": "^4.3.4",
    "css-minimizer-webpack-plugin": "^3.3.1",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-livereload": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "jasmine-core": "^3.10.1",
    "karma": "^6.3.9",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^2.1.0",
    "karma-htmlfile-reporter": "^0.3.8",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-jquery": "^0.1.1",
    "karma-jquery": "^0.2.4",
    "karma-junit-reporter": "^2.0.1",
    "karma-spec-reporter": "0.0.32",
    "mini-css-extract-plugin": "^2.4.5",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
